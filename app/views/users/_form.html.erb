

<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>

  <%end%>
</ul>

<%end%>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %> <br>
        <%= f.text_field :username, placeholder:"Enter username" %>
        
    </p>
    <p>
        <%= f.label :email %> <br>
        <%= f.email_field :email, placeholder:"Enter email" %>
    </p>
    <p>
        <%= f.label :passwrod  %> <br>
        <%= f.password_field :password, placeholder:"Enter password" %>
    </p>
    <p>
        <%= f.submit(@user.new_record? ? "Sign up" : "Update your account") %> 
    </p>

<% end %>

